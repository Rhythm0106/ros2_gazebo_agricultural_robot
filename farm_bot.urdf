<?xml version="1.0"?>
<robot name="farm_bot">

  <!-- ================= MATERIAL ================= -->
  <material name="blue">
    <color rgba="0 0 1 1"/>
  </material>

  <!-- ================= BASE ================= -->
  <link name="base_link">
    <visual>
      <!-- body is above the wheels -->
      <origin xyz="0 0 0.35"/>
      <geometry>
        <box size="1.2 0.8 0.3"/>
      </geometry>
      <material name="blue"/>
    </visual>

    <collision>
      <origin xyz="0 0 0.35"/>
      <geometry>
        <box size="1.2 0.8 0.3"/>
      </geometry>
    </collision>

    <inertial>
      <mass value="20"/>
      <origin xyz="0 0 0.35"/>
      <inertia ixx="1" ixy="0" ixz="0"
               iyy="1" iyz="0"
               izz="1"/>
    </inertial>
  </link>

  <!-- ================= LEFT WHEEL ================= -->
  <link name="left_wheel">
    <visual>
      <!-- wheel touching ground -->
      <origin xyz="0 0.45 0.12" rpy="1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.12" length="0.08"/>
      </geometry>
      <material name="blue"/>
    </visual>

    <collision>
      <origin xyz="0 0.45 0.12" rpy="1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.12" length="0.08"/>
      </geometry>
    </collision>
  </link>

  <!-- ================= RIGHT WHEEL ================= -->
  <link name="right_wheel">
    <visual>
      <origin xyz="0 -0.45 0.12" rpy="1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.12" length="0.08"/>
      </geometry>
      <material name="blue"/>
    </visual>

    <collision>
      <origin xyz="0 -0.45 0.12" rpy="1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.12" length="0.08"/>
      </geometry>
    </collision>
  </link>

  <!-- ================= JOINTS ================= -->
  <joint name="left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="left_wheel"/>
    <origin xyz="0 0.45 0.12"/>
    <axis xyz="0 1 0"/>
  </joint>

  <joint name="right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="right_wheel"/>
    <origin xyz="0 -0.45 0.12"/>
    <axis xyz="0 1 0"/>
  </joint>

</robot>

